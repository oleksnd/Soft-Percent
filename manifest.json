{
  "manifest_version": 3,
  "name": "Soft-Percent — Growth Tracker",
  "version": "0.1.0",
  "description": "Minimalist growth tracker — local-first template (MV3).",
  "icons": {
    "16": "icons/icon16.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications", "offscreen"],
  "web_accessible_resources": [
    {
      "resources": ["sounds/complete.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [],
  "optional_permissions": [],
  "content_scripts": []
}
